@page
@model HospitalManagementSystem.Pages.Hospital.Patients.CreateModel
@{
    ViewData["Title"] = "Create Patient";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Create New Patient</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Patient Information</h6>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Patient.Name" class="control-label"></label>
                            <input asp-for="Patient.Name" class="form-control" />
                            <span asp-validation-for="Patient.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Patient.Email" class="control-label"></label>
                            <input asp-for="Patient.Email" class="form-control" />
                            <span asp-validation-for="Patient.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Patient.PhoneNumber" class="control-label"></label>
                            <input asp-for="Patient.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Patient.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Patient.DateOfBirth" class="control-label"></label>
                            <input asp-for="Patient.DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Patient.Gender" class="control-label"></label>
                            <select asp-for="Patient.Gender" class="form-control">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Patient.Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Patient.Address" class="control-label"></label>
                            <textarea asp-for="Patient.Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Patient.Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Patient.MedicalHistory" class="control-label"></label>
                    <textarea asp-for="Patient.MedicalHistory" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Patient.MedicalHistory" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Patient
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 