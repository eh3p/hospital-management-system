@page
@model HospitalManagementSystem.Pages.Hospital.Public.AboutModel
@{
    ViewData["Title"] = "About Hospital";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">About Our Hospital</h1>
    
    <div class="alert alert-info">
        <h5>Public Information</h5>
        <p>This page is accessible to everyone, including anonymous users.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Hospital Information</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Our Mission</h5>
                    <p>To provide high-quality healthcare services to our community with compassion, excellence, and innovation.</p>
                    
                    <h5>Our Vision</h5>
                    <p>To be the leading healthcare provider, recognized for excellence in patient care, medical education, and research.</p>
                </div>
                <div class="col-md-6">
                    <h5>Contact Information</h5>
                    <ul class="list-unstyled">
                        <li><strong>Address:</strong> 123 Medical Center Drive</li>
                        <li><strong>Phone:</strong> (555) 123-4567</li>
                        <li><strong>Email:</strong> info@hospital.com</li>
                        <li><strong>Emergency:</strong> (555) 911-0000</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Services</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6>Emergency Care</h6>
                    <p>24/7 emergency medical services</p>
                </div>
                <div class="col-md-4">
                    <h6>Specialized Care</h6>
                    <p>Cardiology, Neurology, Oncology</p>
                </div>
                <div class="col-md-4">
                    <h6>Preventive Care</h6>
                    <p>Regular check-ups and screenings</p>
                </div>
            </div>
        </div>
    </div>
</div> 